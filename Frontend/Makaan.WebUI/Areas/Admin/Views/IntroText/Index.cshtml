@model List<ResultIntroTextAreaDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/_Layout.cshtml";
    int count = 0;
}

<section class="section py-5" style="background-color: #f4f5f7;">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="text-dark fw-bold">Giriş Yazısı</h1>
            @if (Model == null)
            {
                <a href="/Admin/IntroText/CreateIntroText" class="btn btn-primary shadow-sm">
                    <i class="bi bi-plus-circle"></i> Yeni Giriş Yazısı Ekle
                </a>
            }
            
        </div>

        <div class="table-responsive rounded shadow-sm bg-white p-4">
            <table class="table align-middle">
                <thead class="table-light">
                    <tr class="text-center">
                        <th scope="col" class="col-1">#</th>
                        <th scope="col" class="col-5">Başlık</th>
                        <th scope="col" class="col-4">Alt Başlık</th>
                        <th scope="col" class="col-1">Sil</th>
                        <th scope="col" class="col-1">Güncelle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr class="text-center">
                            <td class="col-1">@count</td>
                            <td class="col-5">@item.Title</td>
                            <td class="col-4">@item.SubTitle</td>
                            <td class="col-1">
                                <!-- Sil Butonu -->
                                <a href="/Admin/IntroText/DeleteIntroText?id=@item.IntroTextAreaId">
                                    <i class="bi bi-trash fs-4 text-danger"></i>
                                </a>
                            </td>
                            <td class="col-1">
                                <!-- Güncelle Butonu -->
                                <a href="/Admin/IntroText/UpdateIntroText/@item.IntroTextAreaId">
                                    <i class="bi bi-pencil-square fs-4 text-success"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
