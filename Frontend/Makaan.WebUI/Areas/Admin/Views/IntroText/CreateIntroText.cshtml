@model CreateIntroTextAreaDto
@{
    ViewData["Title"] = "CreateIntroText";
    Layout = "~/Areas/Admin/Views/AdminLayout/_Layout.cshtml";
}

<section class="section">
    <div class="row">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Giriş Yazısı Ekleme Sayfası</h5>

                <form method="post">
                    <div class="my-2">
                        <label asp-for="Title" class="f mb-2">Açıklama</label>
                        <input type="text" class="form-control mb-2" asp-for="Title" />
                    </div>
                    <div class="my-2">
                        <label asp-for="SubTitle" class="f mb-2">Adres</label>
                        <input type="text" class="form-control mb-2" asp-for="SubTitle" />
                    </div>
                    <div class="text-center mb-4 mt-3">
                        <button type="submit" class="btn btn-primary px-4 py-2 ">Ekle</button>
                    </div>

                </form>
            </div>
        </div>

        <div>
            <a href="/Admin/IntroText/Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Geri Dön
            </a>
        </div>

    </div>

</section>

