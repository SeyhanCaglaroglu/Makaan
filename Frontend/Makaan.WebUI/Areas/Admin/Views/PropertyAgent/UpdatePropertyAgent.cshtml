@model GetByIdPropertyAgentDto
@{
    ViewData["Title"] = "Mülk Tipi Güncelleme";
    Layout = "~/Areas/Admin/Views/AdminLayout/_Layout.cshtml";
}

<section class="section">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow-sm border-light">
                <div class="card-body">
                    <h5 class="card-title text-center">Emlakçı Güncelleme Sayfası</h5>

                    <form method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="PropertyAgentId" />

                        <!-- Şuanki İkon -->
                        <div class="mb-2 text-center">
                            <label class="f my-2 card-title text-center">Şuanki Resim</label>
                            <div>
                                <img id="PropertyAgentImage" src="@Model.ImageUrl" class="img-fluid rounded" style="width: 100%; max-width: 300px; height: auto;" />
                            </div>
                        </div>

                        <!-- Görsel Seçim -->
                        <div class="mb-2">
                            <input id="PropertyAgentImageUrl" type="text" class="form-control" asp-for="ImageUrl" readonly style="display:none" />
                        </div>

                        <div class="d-flex justify-content-center mb-2">
                            <button type="button" id="PropertyAgentFileButton" class="btn btn-outline-dark btn-block w-50 my-4">Resim Seç</button>
                            <input id="PropertyAgentImageFile" name="ImageURL" type="file" accept=".png,.jpg,.jpeg" style="display:none;" />
                        </div>

                        <div class="my-2">
                            <label asp-for="Title" class="f my-2">Emlakçı Adı</label>
                            <input type="text" class="form-control my-2" asp-for="Title" />
                        </div>

                        <div class="my-2">
                            <label asp-for="SubTitle" class="f my-2">Ünvan</label>
                            <input type="text" class="form-control my-2" asp-for="SubTitle" />
                        </div>

                        <div class="my-2">
                            <label asp-for="FacebookAdress" class="f my-2">Facebook Adresi</label>
                            <input type="text" class="form-control my-2" asp-for="FacebookAdress" />
                        </div>

                        <div class="my-2">
                            <label asp-for="InstagramAdress" class="f my-2">Instagram Adresi</label>
                            <input type="text" class="form-control my-2" asp-for="InstagramAdress" />
                        </div>

                        <div class="my-2">
                            <label asp-for="TwitterAdress" class="f my-2">Twitter Adresi</label>
                            <input type="text" class="form-control my-2" asp-for="TwitterAdress" />
                        </div>

                        <!-- Güncelleme Butonu -->
                        <div class="text-center mt-3">
                            <button type="submit" class="btn btn-primary px-4 py-2 w-100">Güncelle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Geri Butonu -->
        <div class="mt-4">
            <a href="/Admin/PropertyAgent/Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Geri Dön</a>
        </div>
    </div>
</section>

<script>
    // Görsel Seçme İşlemi
    document.getElementById('PropertyAgentFileButton').addEventListener('click', function () {
        document.getElementById('PropertyAgentImageFile').click();
    });

    document.getElementById('PropertyAgentImageFile').addEventListener('change', function (event) {
        var file = event.target.files[0];
        if (file) {
            // Yeni görsel URL'sini okuyarak önizleme
            var reader = new FileReader();
            reader.onload = function (e) {
                document.getElementById('PropertyAgentImage').src = e.target.result;
                // Yeni seçilen dosyanın URL'ini input'a ekle
                document.getElementById('PropertyAgentImageUrl').value = e.target.result;
            };
            reader.readAsDataURL(file);
        }
    });
</script>
