@model List<ResultPropertyAgentDto>
@{
    ViewData["Title"] = "Emlak Ajansları";
    Layout = "~/Areas/Admin/Views/AdminLayout/_Layout.cshtml";
    int count = 0;
}

<section class="section py-5" style="background-color: #f4f5f7;">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="text-dark fw-bold">Emlak Ajansları</h1>
            <a href="/Admin/PropertyAgent/CreatePropertyAgent" class="btn btn-primary shadow-sm">
                <i class="bi bi-plus-circle"></i> Yeni Emlak Ajansı Ekle
            </a>
        </div>

        <div class="table-responsive rounded shadow-sm bg-white p-4">
            <table class="table align-middle">
                <thead class="table-light">
                    <tr class="text-center">
                        <th scope="col" class="col-1">#</th>
                        <th scope="col" class="col-3">Emlakçı Adı</th>
                        <th scope="col" class="col-3">Ünvan</th>
                        <th scope="col" class="col-3">Görsel</th> 
                        <th scope="col" class="col-1">Sil</th>
                        <th scope="col" class="col-1">Güncelle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Take(4))
                    {
                        count++;
                        <tr class="text-center">
                            <td class="col-1">@count</td>
                            <td class="col-2">@item.Title</td>
                            <td class="col-3">@item.SubTitle</td>
                            <td class="col-3">
                                <img src="@item.ImageUrl" class="rounded" style="width: 150px; height: 100px; object-fit: cover;" />
                            </td>
                            <td class="col-1">
                                <!-- Sil Butonu -->
                                <a href="/Admin/PropertyAgent/DeletePropertyAgent?id=@item.PropertyAgentId">
                                    <i class="bi bi-trash fs-4 text-danger"></i>
                                </a>
                            </td>
                            <td class="col-1">
                                <!-- Güncelle Butonu -->
                                <a href="/Admin/PropertyAgent/UpdatePropertyAgent/@item.PropertyAgentId">
                                    <i class="bi bi-pencil-square fs-4 text-success"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
