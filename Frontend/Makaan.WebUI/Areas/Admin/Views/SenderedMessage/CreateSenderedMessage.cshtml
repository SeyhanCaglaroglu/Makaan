@model CreateReceivedMessageDto
@{
    ViewData["Title"] = "CreateSenderedMessage";
    Layout = "~/Areas/Admin/Views/AdminLayout/_Layout.cshtml";
}


<section class="section">
    <div class="row">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Mesaj Gönderme Sayfası</h5>

                <form method="post">
                    <input type="hidden" asp-for="SenderId" value="@ViewBag.UserId" />
                    <div class="my-2">
                        <label asp-for="Subject" class="f mb-2">Konu</label>
                        <input type="text" class="form-control mb-2" asp-for="Subject" />
                    </div>
                    <div class="my-2">
                        <label asp-for="Content" class="f mb-2">Mesaj</label>
                        <textarea type="text" class="form-control mb-2" asp-for="Content" rows="5"></textarea>
                    </div>
                    <div class="text-center mb-4 mt-3">
                        <button type="submit" class="btn btn-success px-4 py-2 "><i class="bi bi-send"></i> Gönder</button>
                    </div>

                </form>
            </div>
        </div>

        <div>
            <a href="/Admin/SenderedMessage/Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Geri Dön</a>
        </div>

    </div>

</section>



