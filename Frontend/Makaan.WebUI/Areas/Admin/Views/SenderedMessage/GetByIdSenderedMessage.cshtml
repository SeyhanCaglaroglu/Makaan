@model GetByIdSenderedMessageDto
@{
    ViewData["Title"] = "UpdateSenderedMessage";
    Layout = "~/Areas/Admin/Views/AdminLayout/_Layout.cshtml";

    
}

<section class="section">
    <div class="row">

        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <h5 class="card-title mb-0">Mesaj Detayı</h5>

                    <a href="/Admin/SenderedMessage/DeleteSenderedMessage/@Model.SenderedMessageId"
                       class="btn btn-danger px-4 py-2">
                        <i class="bi bi-trash"></i> Sil
                    </a>
                </div>

                <div class="my-2">
                    <label asp-for="@Model.Subject" class="f my-2">Konu</label>
                    <input type="text" class="form-control my-2" value="@Model.Subject" readonly />
                </div>
                <div class="my-2">
                    <label class="f my-2">Mesaj</label>
                    <textarea type="text" class="form-control my-2" rows="5" readonly>@Model.Content</textarea>
                </div>
                            
            </div>
        </div>

        <div>
            <a href="/Admin/SenderedMessage/Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Geri Dön</a>
        </div>

    </div>

</section>


