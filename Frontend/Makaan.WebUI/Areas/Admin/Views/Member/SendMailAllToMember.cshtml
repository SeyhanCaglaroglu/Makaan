@model List<UserDetailViewModel>
@{
    ViewData["Title"] = "SendMailAllToMember";
    Layout = "~/Areas/Admin/Views/AdminLayout/_Layout.cshtml";
}

<section class="section">
    <div class="row">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Tüm Üyelere Mail Gönderme</h5>

                <form method="post">
                    <div class="my-2">
                        
                        <textarea name="allEmailAdresses" class="form-control" rows="5" readonly style="display:none">@string.Join(", ", Model.Select(x => x.Email))</textarea>

                    </div>
                    <div class="my-2">
                        <label class="f mb-2">Konu</label>
                        <input type="text" class="form-control mb-2" name="subject" />
                    </div>
                    <div class="my-2">
                        <label class="f mb-2">Mesaj</label>
                        <textarea type="text" class="form-control mb-2" name="message" rows="5"></textarea>
                    </div>
                    <div class="text-center mb-4 mt-3">
                        <button type="submit" class="btn btn-success px-4 py-2 "><i class="bi bi-send"></i> Gönder</button>
                    </div>

                </form>
            </div>
        </div>

        <div>
            <a href="/Admin/Member" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Geri Dön</a>
        </div>

    </div>

</section>

