@model List<ResultContactIntroPosterDto>
@{
    ViewData["Title"] = "Giriş Slaytları";
    Layout = "~/Areas/Admin/Views/AdminLayout/_Layout.cshtml";
    int count = 0;
}

<section class="section py-5" style="background-color: #f4f5f7;">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="text-dark fw-bold">Yorum Yap Sayfası Giriş Posteri</h1>
            @if (Model == null)
            {
                <a href="/Admin/ContactIntroPoster/CreateContactIntroPoster" class="btn btn-primary shadow-sm">
                    <i class="bi bi-plus-circle"></i> Yeni Poster Ekle
                </a>
            }
        </div>

        <div class="table-responsive rounded shadow-sm bg-white p-4">
            <table class="table align-middle">
                <thead class="table-light">
                    <tr class="text-center">
                        <th scope="col" class="col-1">#</th>
                        <th scope="col" class="col-8">Poster</th>
                        <th scope="col" class="col-1">Sil</th>
                        <th scope="col" class="col-1">Güncelle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr class="text-center">
                            <td class="col-1">@count</td>
                            <td class="col-8">
                                <img src="@item.PosterUrl" class="rounded" style="width: 250px; height: 150px; object-fit: cover;" />
                            </td>
                            <td class="col-1">
                                <!-- Sil Butonu -->
                                <a href="/Admin/ContactIntroPoster/DeleteContactIntroPoster?id=@item.ContactIntroPosterId">
                                    <i class="bi bi-trash fs-4 text-danger"></i>
                                </a>
                            </td>
                            <td class="col-1">
                                <!-- Güncelle Butonu -->
                                <a href="/Admin/ContactIntroPoster/UpdateContactIntroPoster/@item.ContactIntroPosterId">
                                    <i class="bi bi-pencil-square fs-4 text-success"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>


</section>

<div>
    <a href="/Admin/MemberComment/Index" class="btn btn-secondary">Geri</a>
</div>