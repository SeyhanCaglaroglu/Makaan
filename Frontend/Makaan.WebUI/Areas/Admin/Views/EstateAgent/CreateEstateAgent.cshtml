@model CreateEstateAgentApplicationDto
@{
    ViewData["Title"] = "CreateIntroText";
    Layout = "~/Areas/Admin/Views/AdminLayout/_Layout.cshtml";
}

<section class="section">
    <div class="row">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Emlakçı Ekleme Sayfası</h5>

                <form method="post">
                    <div class="my-2">
                        <label asp-for="CompanyName" class="f mb-2">Şirket Adı</label>
                        <input type="text" class="form-control mb-2" asp-for="CompanyName" />
                    </div>
                    <div class="my-2">
                        <label asp-for="AuthorizedNameSurname" class="f mb-2">Yetkili Adı</label>
                        <input type="text" class="form-control mb-2" asp-for="AuthorizedNameSurname" />
                    </div>
                    <div class="my-2">
                        <label asp-for="AuthorizedPhoneNumber" class="f mb-2">Yetkili Telefon Numarası</label>
                        <input type="text" class="form-control mb-2" asp-for="AuthorizedPhoneNumber" />
                    </div>
                    <div class="my-2">
                        <label asp-for="CompanyEmail" class="f mb-2">Şirket Email</label>
                        <input type="text" class="form-control mb-2" asp-for="CompanyEmail" />
                    </div>
                    <div class="my-2">
                        <label asp-for="Password" class="f mb-2">Şifre</label>
                        <input type="text" class="form-control mb-2" asp-for="Password" />
                    </div>
                    <div class="my-2">
                        <label asp-for="PasswordAgain" class="f mb-2">Şifre Tekrar</label>
                        <input type="text" class="form-control mb-2" asp-for="PasswordAgain" />
                    </div>
                    <div class="my-2">
                        <label asp-for="City" class="f mb-2">Şehir</label>
                        <input type="text" class="form-control mb-2" asp-for="City" />
                    </div>
                    <div class="my-2">
                        <label asp-for="Location" class="f mb-2">Adres</label>
                        <input type="text" class="form-control mb-2" asp-for="Location" />
                    </div>
                    <div class="text-center mb-4 mt-3">
                        <button type="submit" class="btn btn-primary px-4 py-2 ">Ekle</button>
                    </div>

                </form>
            </div>
        </div>

        <div>
            <a href="/Admin/EstateAgent/Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Geri Dön</a>
        </div>

    </div>

</section>

