@model ResetPasswordViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Makaan - Şifremi Unuttum</title>
    <link href="~/css/Login.css" rel="stylesheet" />

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.rtl.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

    <style>
        .alert-danger {
            color: red;
            padding: 15px;
            border-radius: 5px;
            margin-top: 20px;
            text-align: center;
            font-size: 16px;
        }
    </style>
</head>
<body>

    <!-- Makaan Title -->
    <div class="title">Makaan</div>


    <!-- Bubbles -->
    <div class="bubbles">
        <div class="bubble bubble-1"></div>
        <div class="bubble bubble-2"></div>
        <div class="bubble bubble-3"></div>
        <div class="bubble bubble-4"></div>
    </div>

    <!-- Login Form -->
    <div class="login-container">

        <h6>Yeni Şifreniz Email Adresine Gönderilicektir</h6>
        @if (TempData["FailedResetPasswordMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["FailedResetPasswordMessage"]
            </div>
        }
        <form method="post">
            <div class="form-group">
                <input type="email" placeholder="Email" asp-for="Email" class="form-control" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            
            <button type="submit">Gönder</button>
        </form>
        <a href="/Account/Login" class="forgot-password">Giriş Yap</a>
        <div class="account-link">
            <p>Henüz bir hesabınız yokmu? <a href="/Account/SignUp">Kayıt Ol</a></p>
        </div>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.esm.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.esm.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
</body>
</html>
