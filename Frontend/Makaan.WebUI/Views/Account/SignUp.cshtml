@model SaveUserViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Makaan - Kayıt Ol</title>
    <link href="~/css/Login.css" rel="stylesheet" />
    
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.rtl.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>
<body>

    <!-- Makaan Title -->
    <div class="title">Makaan</div>

    <!-- Bubbles -->
    <div class="bubbles">
        <div class="bubble bubble-1"></div>
        <div class="bubble bubble-2"></div>
        <div class="bubble bubble-3"></div>
        <div class="bubble bubble-4"></div>
    </div>

    <!-- Login Form -->
    <div class="login-container">
        <h2 class="mb-2">Kayıt Ol</h2>
        @if (TempData["FailCreateAccountMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["FailCreateAccountMessage"]
            </div>
        }
        <form method="post">
            <div class="form-group">
                <input type="text" placeholder="Kullanıcı Adı" asp-for="UserName" class="form-control" required />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="email" placeholder="Email" asp-for="Email" class="form-control" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="password" placeholder="Şifre" asp-for="Password" class="form-control" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="password" placeholder="Şifre Tekrar" asp-for="PasswordAgain" class="form-control" required />
                <span asp-validation-for="PasswordAgain" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="text" placeholder="Şehir" asp-for="City" class="form-control" required />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Kayıt Ol</button>
        </form>
        <div class="account-link">
            <p>Zaten bir hesabınız varmı? <a href="/Account/Login">Giriş Yap</a></p>
        </div>
    </div>

</body>
</html>
