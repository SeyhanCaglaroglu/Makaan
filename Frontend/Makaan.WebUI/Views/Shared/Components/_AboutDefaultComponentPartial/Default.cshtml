@model List<ResultFeaturedAboutDto>
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-5 align-items-center">
            @foreach (var item in Model)
            {
                <div class="col-lg-6 wow fadeIn" data-wow-delay="0.1s">
                    <div class="about-img position-relative overflow-hidden p-5 pe-0">
                        <img class="img-fluid w-100" src="@item.ImageUrl" style="width:660px;height:565px;">
                    </div>
                </div>
                <div class="col-lg-6 wow fadeIn" data-wow-delay="0.5s">
                    <h1 class="mb-4">@item.Title</h1>
                    <p class="mb-4">@item.Description</p>
                    <p><i class="fa fa-check text-primary me-3"></i>@item.Tag1</p>
                    <p><i class="fa fa-check text-primary me-3"></i>@item.Tag2</p>
                    <p><i class="fa fa-check text-primary me-3"></i>@item.Tag3</p>
                    <a class="btn btn-primary py-3 px-5 mt-3" href="">Devamını Oku</a>
                </div>
            }
            
        </div>
    </div>
</div>